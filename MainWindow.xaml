<Window x:Class="MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="567" Width="999"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#353b48" Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <TextBox Margin="248,10,10,152" Name="txtFilter" TextChanged="txtFilter_TextChanged"/>
        <ListView Margin="248,50,10,141" Name="listViewData" SelectionChanged="listViewData_SelectionChanged" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="225" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Artist" Width="225" DisplayMemberBinding="{Binding Artists}" />
                    <GridViewColumn Header="Album" Width="225" DisplayMemberBinding="{Binding Album}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                    <EventSetter Event="MouseDoubleClick" Handler="ListView_MouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Label Name="lblStatusSongArtist" Content="Not playing..." HorizontalContentAlignment="Center" Margin="0,298,0,10" Foreground="#ffffff" Grid.Row="1"/>
        <Button x:Name="PlayAllButton" Click="btnPlayAll_Click" Content="Play All" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="906,208,0,0" Grid.Row="1"/>
        <Button x:Name="ShuffleButton" Click="btnShuffle_Click" Content="Shuffle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="826,208,0,0" Grid.Row="1"/>
        <ListView HorizontalAlignment="Left" Name="listViewPlaylists" Height="355" VerticalAlignment="Top" Width="233" Margin="10,10,0,0" SelectionChanged="listViewPlaylists_SelectionChanged" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Playlist Name" Width="233" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewPlaylist_MouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button x:Name="CreatePlaylistButton" Click="btnCreatePlaylist_Click" Content="Create Playlist" HorizontalAlignment="Left" VerticalAlignment="Top" Width="233" Margin="10,173,0,0" Grid.Row="1" Height="30"/>
        <Label x:Name="lblStatus" Content="0:00" HorizontalContentAlignment="Center" Margin="0,269,1,42" Foreground="#ffffff" Grid.Row="1" HorizontalAlignment="Right" Width="990" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.004"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Grid Margin="305,208,306,70" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="46*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <Button Click="btnPlay_Click" Margin="65,0,105,0" Background="Transparent"  BorderThickness="0" Grid.Column="1">
                <Image Source="Assets/play.png" Height="51" Width="45" />
            </Button>
            <Button Click="btnStop_Click" Margin="145,0,25,0" Background="Transparent"  BorderThickness="0" Grid.Column="1">
                <Image Source="Assets/pause.png" Height="51" Width="45" />
            </Button>
            <Button Click="btnPause_Click" Margin="80,0,185,0" Background="Transparent"  BorderThickness="0" Grid.ColumnSpan="2">
                <Image Source="Assets/stop.png" Height="51" Width="45" />
            </Button>
            <Button Click="btnPrevious_Click" Margin="0,0,35,0" Background="Transparent"  BorderThickness="0">
                <Image Source="Assets/back.png" Height="51" Width="45" />
            </Button>
            <Button Click="btnSkip_Click" Margin="225,0,0,0" Background="Transparent"  BorderThickness="0" Grid.ColumnSpan="2" Grid.Column="1">
                <Image Source="Assets/skip.png" Height="51" Width="45" />
            </Button>

        </Grid>

    </Grid>
</Window>